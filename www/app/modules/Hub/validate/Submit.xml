<?xml version="1.0" encoding="UTF-8"?>
<configurations xmlns="http://agavi.org/agavi/1.0/config" parent="%core.config_dir%/validators.xml">

	<configuration>

		<validators method="write">

			<validator class="string">
				<argument>title</argument>
				<parameters>
					<parameter name="min">3</parameter>
					<parameter name="max">50</parameter>
				</parameters>
				<errors>
					<error>Please provide a descriptive title.</error>
					<error for="max">Please provide a descriptive title, longer than 3 characters.</error>
				</errors>
			</validator>

			<validator class="regex">
				<argument>ident</argument>
				<parameters>
					<parameter name="pattern">/[a-z0-9_-]{3,32}/</parameter>
				</parameters>
				<error>Please provide a lowercase ident between 3 and 32 characters (only letters, digits, - and _).</error>
			</validator>

			<validator class="string" required="false">
				<argument>text</argument>
				<parameters>
					<parameter name="min">5</parameter>
				</parameters>
				<errors>
					<error>Please provide a longer description, minimum 5 chars.</error>
				</errors>
			</validator>

			<validator class="number" required="false">
				<argument>type</argument>
				<parameters>
					<parameter name="type">int</parameter>
				</parameters>
				<error>Invalid type.</error>
			</validator>

			<validator class="isset" required="false">
				<argument>author</argument>
			</validator>

			<validator class="isset" required="false">
				<argument>authorship</argument>
			</validator>

			<validator class="url" required="false">
				<argument>homepage</argument>
				<error>Invalid URL.</error>
			</validator>

			<validator class="isset" required="false">
				<argument>login_remember</argument>
			</validator>

		</validators>

	</configuration>
</configurations>