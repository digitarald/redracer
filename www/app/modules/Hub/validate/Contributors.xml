<?xml version="1.0" encoding="UTF-8"?>
<configurations xmlns="http://agavi.org/agavi/1.0/config" parent="%core.config_dir%/validators.xml">

	<configuration>


		<validators method="read">

			<validator class="number" required="false">
				<argument>delete</argument>
				<parameters>
					<parameter name="type">int</parameter>
				</parameters>
				<error>Invalid id.</error>
			</validator>

			<validator class="number" required="false">
				<argument>add</argument>
				<parameters>
					<parameter name="type">int</parameter>
				</parameters>
				<error>Invalid id.</error>
			</validator>

		</validators>

		<validators method="write">

			<validator class="number" required="false">
				<argument>id</argument>
				<parameters>
					<parameter name="type">int</parameter>
				</parameters>
				<error>Invalid id.</error>
			</validator>

			<validator class="string" required="false">
				<argument>title</argument>
				<parameters>
					<parameter name="max">50</parameter>
				</parameters>
				<error>Invalid title, maximal 50 characters.</error>
			</validator>

			<validator class="string" required="false">
				<argument>text</argument>
				<parameters>
					<parameter name="max">50</parameter>
				</parameters>
				<error>Invalid text, maximal 500 characters.</error>
			</validator>

		</validators>

	</configuration>
</configurations>