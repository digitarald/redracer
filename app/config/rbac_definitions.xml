<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configurations xmlns="http://agavi.org/agavi/1.0/config">
	<configuration>
		<roles>
			<role name="administrator">
				<permissions>
					<permission>god</permission>
				</permissions>
			</role>
			<role name="guest">
				<permissions>
					<permission>resources.list</permission>
				</permissions>
				<roles>
					<role name="member">
						<permissions>
							<permission>resources.claim</permission>
							<permission>resources.submit</permission>
							<permission>resources.contributor-add</permission>
						</permissions>
						<roles>
							<role name="moderator">
								<permissions>
									<permission>resources.change-indent</permission>
								</permissions>
							</role>
						</roles>
					</role>
				</roles>
			</role>
		</roles>
	</configuration>
</configurations>