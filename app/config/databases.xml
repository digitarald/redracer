<?xml version="1.0" encoding="UTF-8"?>
<configurations xmlns="http://agavi.org/agavi/1.0/config">

	<configuration environment="development-digitarald">
		<databases default="doctrine">

			<database name="doctrine" class="AgaviDoctrineDatabase">
				<parameters>
					<parameter name="dsn">mysql://root:@localhost/redracer</parameter>
					<parameter name="attributes">
						<parameters>
							<parameter name="160">true</parameter>
							<parameter name="107">LENGTHS</parameter>
							<parameter name="165">true</parameter>
						</parameters>
					</parameter>
					<parameter name="manager_attributes">
						<parameters>
							<parameter name="model_loading">conservative</parameter>
						</parameters>
					</parameter>
					<parameter name="load_models">%core.lib_dir%/doctrine/models</parameter>
				</parameters>
			</database>

		</databases>
	</configuration>

</configurations>
